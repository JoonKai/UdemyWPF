<UserControl x:Class="_05_DelegatesAndEventsDemo.ValueUC"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:_05_DelegatesAndEventsDemo"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <StackPanel>
        <StackPanel Orientation="Horizontal">
            <Button Content="+10" Width="80" Height="60" Click="Minus_Button_Click"/>
            <Button Content="-10" Width="80" Height="60" Click="Plus_Button_Click"/>
        </StackPanel>
        <Border Width="160" BorderThickness="2" BorderBrush="Black" HorizontalAlignment="Left"/>
        <TextBox x:Name="ValueLabel" HorizontalAlignment="Left" TextChanged="ValueLabel_TextChanged" Width="160" Height="40" FontSize="20" Text="50"/>
    </StackPanel>
</UserControl>
